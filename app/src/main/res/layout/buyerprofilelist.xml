<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:elevation="15dp"
    android:background="@color/design_default_color_primary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/namebuyerretrive"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/namebuyerretrive"
            android:id="@+id/emailbuyerretrive"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailbuyerretrive"
            android:id="@+id/phonenobuyerretrive"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phonenobuyerretrive"
            android:id="@+id/addressbuyerretrive"
            android:layout_marginTop="15dp"
            />

        <Button
            android:id="@+id/updateprofilebuyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressbuyerretrive"
            android:background="@drawable/borderbutton"
            android:text="Update Profile"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>