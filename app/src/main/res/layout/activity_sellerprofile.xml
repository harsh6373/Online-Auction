<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sellerprofile">





    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <FrameLayout
            android:id="@+id/framehome"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="25dp"
                android:text="Seller Profile"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="30sp" />

            <View
                android:layout_width="500dp"
                android:layout_height="4dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="64dp"
                android:background="@android:color/darker_gray" />


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:background="@drawable/border"
                android:id="@+id/profile"
                android:src="@drawable/ic_baseline_person_24"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Profile Pictre"
                android:textSize="18sp"
                android:textColor="@color/blue"
                android:layout_marginTop="240dp"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="300dp"
                android:editable="false"
                android:hint="Name "
                android:textAlignment="center"
                android:paddingLeft="15dp"
                android:background="@drawable/border"
                android:ems="10"
                tools:ignore="Deprecated" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="370dp"
                android:editable="false"
                android:hint="Email"
                android:textAlignment="center"
                android:paddingLeft="15dp"
                android:background="@drawable/border"
                android:ems="10"
                tools:ignore="Deprecated" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="440dp"
                android:editable="false"
                android:hint="Password"
                android:textAlignment="center"
                android:paddingLeft="15dp"
                android:background="@drawable/border"
                android:ems="10"
                tools:ignore="Deprecated" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="510dp"
                android:editable="false"
                android:hint="Phone Number"
                android:textAlignment="center"
                android:paddingLeft="15dp"
                android:background="@drawable/border"
                android:ems="10"
                tools:ignore="Deprecated" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="580dp"
                android:editable="false"
                android:hint="Address"
                android:textAlignment="center"
                android:paddingLeft="15dp"
                android:background="@drawable/border"
                android:ems="10"
                tools:ignore="Deprecated" />

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Edit Your Details"
                android:background="@drawable/borderbutton"
                android:padding="15dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="680dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="760dp"
                android:text="Bid Requests"
                android:id="@+id/bidrequest"
                android:textColor="@color/blue"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Sell History"
                android:id="@+id/sellhisoryy"
                android:textSize="19sp"
                android:textColor="@color/blue"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="810dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visit Auctions"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:layout_marginTop="860dp"
                android:layout_gravity="center_horizontal"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:id="@+id/aboutuss"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="910dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:id="@+id/contactuss"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="960dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Condition"
                android:id="@+id/termsconditionss"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="1010dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:id="@+id/feedbackk"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="1060dp"
                android:layout_gravity="center_horizontal"/>



            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="LOGOUT"
                android:id="@+id/logoutt"
                android:background="@drawable/borderbutton"
                android:padding="15dp"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="1110dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginTop="1240dp"/>






        </FrameLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bootonnav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        app:menu="@menu/seller" />












</RelativeLayout>