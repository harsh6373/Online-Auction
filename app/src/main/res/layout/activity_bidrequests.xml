<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bidrequests">

    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <FrameLayout
            android:id="@+id/framehome"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/bidrequest"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="200dp"
                android:text="Bids On Your Product"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:id="@+id/hr"
                android:layout_alignParentStart="true"
                android:layout_marginTop="250dp"
                android:background="@android:color/darker_gray" />






            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="270dp"
                android:src="@drawable/f4" />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="440dp"
                android:text="New Balance Mens Sport Sneaker Shoes"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                />



            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Auction Details: H Auction  Email Address: example123@gmail.com"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="520dp"
                android:textSize="20sp"
                android:textStyle="normal"
                />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Buyer Detail : Harsh Email Address: Example123@gmail.com"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="590dp"
                android:textSize="20sp"
                android:textStyle="normal"
                />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: New Balance Mens 770.9 Blue Sport Running Shoes Sneakers 7 Medium (D) BHFO 0180"
                android:layout_marginTop="670dp"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:textStyle="normal"
                />


            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asked Bid Prize: 5000"
                android:layout_marginTop="780dp"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                />


            <Button
                android:id="@+id/button13"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/lightgreenborderbutton"
                android:text="Accept Bid"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="840dp"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/button12"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/redborderbutton"
                android:text="Reject Bid"
                android:textStyle="bold"
                android:layout_marginLeft="200dp"
                android:textSize="20sp"
                android:layout_marginTop="840dp"
                android:textColor="@color/colorWhite" />




            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:id="@+id/hr1"
                android:layout_alignParentStart="true"
                android:layout_marginTop="910dp"
                android:background="@android:color/darker_gray" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginTop="940dp"

                />





        </FrameLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bootonnav"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        app:menu="@menu/seller"
        />














</RelativeLayout>